<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subscribe_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10.0dip"
        android:layout_marginTop="14.0dip"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/channel_manage"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/my_category_tip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12.0dip"
            android:text="@string/channel_hint"
            android:textSize="12sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="#000000" />


    <TextView
        android:id="@+id/my_channel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_channel"
        android:textSize="18sp" />

    <GridView
        android:id="@+id/userGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        android:gravity="center"
        android:horizontalSpacing="14dip"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:scrollbars="vertical"
        android:stretchMode="columnWidth"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/more_channel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_channel"
        android:textSize="18sp" />

    <GridView
        android:id="@+id/otherGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        android:gravity="center"
        android:horizontalSpacing="14dip"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:scrollbars="vertical"
        android:stretchMode="columnWidth"
       />
</LinearLayout>

